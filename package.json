{
	"name": "@nedcloarbr/nestjs-toolkit",
	"version": "1.0.4",
	"description": "A collection of tools and utilities for NestJS applications.",
	"author": "NedcloarBR",
	"license": "MIT",
	"bin": "dist/src/main.js",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"biome:format": "yarn biome format --write ./",
		"biome:lint": "yarn biome lint ./",
		"biome:check": "yarn biome check --write ./",
		"test:command": "yarn build && node dist/src/main",
		"release": "yarn build && release-it",
		"changelog": "git cliff --prepend ./CHANGELOG.md -l --current -c ./cliff.toml -r ."
	},
	"packageManager": "yarn@4.9.3",
	"engines": {
		"node": ">=20"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.6",
		"@nestjs/core": "^11.1.6",
		"chalk": "^5.6.2",
		"nest-commander": "^3.20.1",
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@nedcloarbr/biome-config": "^2.0.1",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.8",
		"@types/inquirer": "^9.0.9",
		"@types/node": "^22.18.8",
		"commander": "^14.0.1",
		"globals": "^16.4.0",
		"release-it": "^19.0.5",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3"
	}
}
